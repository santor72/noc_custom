{
  "id": 2,
  "gridPos": {
    "h": 19,
    "w": 21,
    "x": 0,
    "y": 0
  },
  "type": "knightss27-weathermap-panel",
  "title": "Core",
  "datasource": {
    "type": "vertamedia-clickhouse-datasource",
    "uid": "qV6bq6bnk"
  },
  "options": {
    "weathermap": {
      "id": "{{ graf['uuid']}}",
      "links": [
	{% from "link.j2" import link -%}
	{% for litem in links %}
	{{link(litem['id'], litem['nodea'], litem['nodeb'],litem['bandwidth'],litem['query_a'],litem['query_b'])}}{% if not loop.last %},{% endif %}
	{% endfor %}
      ],
      "nodes": [
	{% from "node.j2" import node -%}
	{% for nitem in nodes %}
	{{node(nitem['id'], nitem['label'], nitem['iconname'], nitem['iconpath'], nitem['x'], nitem['y'])}}{% if not loop.last %},{% endif %}
	{% endfor %}
      ],
      "scale": [
        {
          "color": "#37872D",
          "percent": 0
        },
        {
          "color": "#96D98D",
          "percent": 60
        },
        {
          "color": "#FFB357",
          "percent": 70
        },
        {
          "color": "#FA6400",
          "percent": 90
        },
        {
          "color": "#C4162A",
          "percent": 100
        }
      ],
      "settings": {
        "fontSizing": {
          "link": 7,
          "node": 10
        },
        "link": {
          "label": {
            "background": "rgba(204, 204, 220, 0.16)",
            "border": "rgba(204, 204, 220, 0.25)",
            "font": "rgb(204, 204, 220)"
          },
          "showAllWithPercentage": false,
          "spacing": {
            "horizontal": 18,
            "vertical": 3
          },
          "stroke": {
            "color": "#37872D"
          }
        },
        "panel": {
          "backgroundColor": "#00000000",
          "grid": {
            "enabled": false,
            "guidesEnabled": false,
            "size": 10
          },
          "offset": {
            "x": 0,
            "y": 0
          },
          "panelSize": {
            "height": 1024,
            "width": 1024
          },
          "showTimestamp": true,
          "zoomScale": -5
        },
        "scale": {
          "fontSizing": {
            "threshold": 12,
            "title": 16
          },
          "position": {
            "x": 0,
            "y": 0
          },
          "size": {
            "height": 180,
            "width": 10
          },
          "title": "Traffic Load"
        },
        "tooltip": {
          "backgroundColor": "black",
          "fontSize": 8,
          "inboundColor": "#00cf00",
          "outboundColor": "#fade2a",
          "scaleToBandwidth": false,
          "textColor": "white"
        }
      },
      "version": 13
    }
  },
  "targets": [
    {% from "target.j2" import target -%}
	{% for titem in targets %}
	{{target(titem['name'], titem['bi_id'], titem['interface'])}}{% if not loop.last %},{% endif %}
	{% endfor %}
  ]
}
